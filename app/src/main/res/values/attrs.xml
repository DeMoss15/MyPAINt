<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="wavesViewStyle" format="reference" />

    <declare-styleable name="WavesView">
        <attr name="waveColor" format="color" />
        <attr name="waveStrokeWidth" format="dimension" />
        <attr name="waveGap" format="dimension" />
        <attr name="starSharpness" format="float" />
        <attr name="starVertexCount" format="integer" />
    </declare-styleable>

    <style name="Widget.WaveView" parent="@android:style/Widget">
        <item name="waveStrokeWidth">1dp</item>
        <item name="waveColor">@color/colorPrimary</item>
        <item name="starVertexCount">5</item>
        <item name="starSharpness">0.5</item>
        <item name="waveGap">16dp</item>
    </style>

    <!-- RoundSearchBar -->
    <attr name="roundSeekBarStyle" format="reference" />

    <declare-styleable name="RoundSeekBarView">
        <attr name="highlightColor" format="color"/>
        <attr name="color" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <style name="Widget.RoundSeekBar" parent="@android:style/Widget">
        <item name="highlightColor">@android:color/holo_blue_light</item>
        <item name="color">@android:color/holo_blue_dark</item>
    </style>
</resources>